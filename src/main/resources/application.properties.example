# Application name
spring.application.name=RideConnectApplication

# Server configuration
server.port=8080
server.servlet.context-path=/api

# Database configuration
# Replace these with your actual database credentials
spring.datasource.url=${DATABASE_URL}
spring.datasource.username=${DATABASE_USERNAME}
spring.datasource.password=${DATABASE_PASSWORD}
spring.datasource.driver-class-name=org.postgresql.Driver

# UUID type mapping
spring.jpa.properties.hibernate.jdbc.lob.non_contextual_creation=true

# JPA configuration
spring.jpa.hibernate.ddl-auto=validate
spring.jpa.show-sql=true
spring.jpa.open-in-view=false
spring.jpa.properties.hibernate.format_sql=true

# JWT Configuration
app.jwt.secret=${JWT_SECRET}
app.jwt.expiration=86400000

# Goong Map Configuration
goong.api.key=${GOONG_API_KEY}
goong.maptiles.key=${GOONG_MAPTILES_KEY}
goong.api.base-url=https://rsapi.goong.io

# WebSocket configuration
websocket.endpoint=/ws
websocket.allowed-origins=*

# File upload configuration
spring.servlet.multipart.max-file-size=10MB
spring.servlet.multipart.max-request-size=10MB
file.upload.directory=uploads/

# Logging configuration
logging.level.root=INFO
logging.level.com.rideconnect=DEBUG
logging.file.name=logs/rideconnect.log

# SSL Configuration (commented out by default)
# server.ssl.enabled=true
# server.ssl.key-store=classpath:keystore.p12
# server.ssl.key-store-password=your-password
# server.ssl.key-store-type=PKCS12
# server.ssl.key-alias=tomcat

# Pricing configuration (in VND)
rideconnect.pricing.base-fare=15000
rideconnect.pricing.per-km=5000
rideconnect.pricing.per-minute=1000
rideconnect.pricing.minimum-fare=20000

####################################
# HOW TO USE THIS FILE:
# 1. Copy this file to application.properties
# 2. Set up the following environment variables with your values:
#    - DATABASE_URL
#    - DATABASE_USERNAME
#    - DATABASE_PASSWORD
#    - JWT_SECRET
#    - GOONG_API_KEY
#    - GOONG_MAPTILES_KEY
# 3. Never commit the actual application.properties file
